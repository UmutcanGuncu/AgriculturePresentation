@model AgriculturePresentation.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil Güncelle</h4>
            <form method="post" class="forms-sample">
               
                <div class="form-group">
                    <label for="exampleInputName1">Mail</label>
                    <input type="email" class="form-control" id="exampleInputName1" placeholder="Mail Adresi" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1"> Telefon Numarası</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Telefon Numarası" asp-for="Phone">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputEmail3" placeholder="Şifre" asp-for="Password">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şifre Tekrarı</label>
                    <input type="password" class="form-control" id="exampleInputEmail3" placeholder="Şifre Tekrarı" asp-for="ConfirmPassword">
                </div>

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <a class="btn btn-light" href="/Team/Index/">Vazgeç</a>
            </form>
        </div>
    </div>
</div>


