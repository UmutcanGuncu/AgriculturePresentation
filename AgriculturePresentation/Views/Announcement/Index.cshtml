@using EntityLayer.Concrete
@model List<Announcement>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Announcement</h4>
            <p class="card-description">
                Add class <code>.table-bordered</code>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Başlık
                            </th>
                            <th>Tarih</th>
                            <th>
                                Açıklama
                            </th>
                            <th>
                                Durum

                            </th>
                            <th>
                                Sil
                            </th>
                            <th>
                                Güncelle
                            </th>
                            <th>Aktif Yap</th>
                            <th>Pasif Yap</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.AnnouncementId</td>
                                <td>@item.Title</td>
                                <td>@item.Date</td>
                                <td>@item.Description</td>
                                <td>@item.Status</td>
                                <td><a href="/Announcement/DeleteAnnouncement/@item.AnnouncementId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Announcement/UpdateAnnouncement/@item.AnnouncementId" class="btn btn-outline-info">Güncelle</a></td>
                                <td><a href="/Announcement/ChanceStatusToTrue/@item.AnnouncementId" class="btn btn-outline-primary">Aktif Yap</a></td>
                                <td><a href="/Announcement/ChanceStatusToFalse/@item.AnnouncementId" class="btn btn-outline-warning">Pasif Yap</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Announcement/AddAnnouncement" class="btn btn-outline-success">Yeni Announcement Girişi</a>
            </div>
        </div>
    </div>
</div>
