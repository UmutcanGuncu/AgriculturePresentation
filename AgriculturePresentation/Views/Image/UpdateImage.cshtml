@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "UpdateImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Güncelle</h4>
            <form method="post" class="forms-sample">
                @Html.HiddenFor(x=>x.ImageId)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık Giriniz" asp-for="ImageTitle">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1"> Görsel Linki</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel Linki" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Açıklama" asp-for="Description">
                </div>

                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <a class="btn btn-light" href="/Team/Index/">Vazgeç</a>
            </form>
        </div>
    </div>
</div>

