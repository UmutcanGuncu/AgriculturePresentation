@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Resim Kaydı</h4>
            <form method="post" class="forms-sample">
                <div class="form-group">
                    <label for="exampleInputName1">Resim Başlığı</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Resim Başlığı" asp-for="ImageTitle">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Açıklama" asp-for="Description">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Resim Linki</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Resim Linki" asp-for="ImageUrl">
                </div>
               <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <a class="btn btn-light" href="/Images/Index/">Vazgeç</a>
            </form>
        </div>
    </div>
</div>


