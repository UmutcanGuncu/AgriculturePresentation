@model EntityLayer.Concrete.Adress
@{
    ViewData["Title"] = "UpdateAdress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Adres Güncelle</h4>
            <form method="post" class="forms-sample">
                @Html.HiddenFor(x=>x.AdressId)
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 1</label>
                    
                    <input type="text" class="form-control" id="exampleInputName1"  asp-for="Description1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 2</label>
                    
                    <input type="text" class="form-control" id="exampleInputEmail3"  asp-for="Description2">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 3</label>
                    
                    <input type="text" class="form-control" id="exampleInputEmail3" asp-for="Description3">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Harita Konumu</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Harita Konumu" asp-for="MapInfo">
                </div>
               
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <a class="btn btn-light" href="/Team/Index/">Vazgeç</a>
            </form>
        </div>
    </div>
</div>


