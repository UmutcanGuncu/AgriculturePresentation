@using EntityLayer.Concrete
@model List<Team>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşlarımız</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                             <th>Ad Soyad</th>
                            <th>Görev</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-1">
                                    <img src="~/MajesticAdmin-Free-Bootstrap-Admin-Template-master/template/images/faces/face1.jpg" alt="image" />
                                </td>
                                <td>@item.TeamId</td>
                                <td>@item.PersonName</td>
                                <td>@item.Title</td>
                                <td><a href="/Team/DeleteTeam/@item.TeamId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Team/UpdateTeam/@item.TeamId" class="btn btn-outline-info">Güncelle</a></td>
                            </tr>
                            

                        }
                    </tbody>
                </table>
                <br />
                <a href="/Team/AddTeam/" class="btn btn-outline-info" >Yeni Takım Arkadaşı Ekle</a>
            </div>
        </div>
    </div>
</div>