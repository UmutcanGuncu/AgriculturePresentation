@model EntityLayer.Concrete.Team
@{
    ViewData["Title"] = "UpdateTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Takım Arkadaşı Güncelle</h4>
            <form method="post" class="forms-sample">
                @Html.HiddenFor(x=>x.TeamId)
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Adınızı Giriniz" asp-for="PersonName">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Göreviniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Görsel</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Görsel Linki" asp-for="ImageUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Facebook</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Facebook Linki" asp-for="FacebookUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">İnstagram</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Instagram Linki" asp-for="InstagramUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Twitter</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Twitter Linki" asp-for="TwitterUrl">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Website</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" placeholder="Website Linki" asp-for="WebsiteUrl">
                </div>
                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
                <a class="btn btn-light" href="/Team/Index/">Vazgeç</a>
            </form>
        </div>
    </div>
</div>


